<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net45</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Craxy.Parkitect.Currencies</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Used as identifier in parkitect (-> IMod.Identifier) -->
    <Identifier>Craxy@Currencies</Identifier>
    <!-- Version of this mod. Used as AssemblyVersion and FileVersion-->
    <Version>1.1.0</Version>
    <!-- Used as name in parkitect(-> IMod.Name) and as AssemblyTitle and AssemblyProduct-->
    <Name>Currencies</Name>
    <!-- Used as description in parkitect (-> IMod.Description) and as AssemblyDescription -->
    <Description>Change the currency symbol.</Description>
    
    <Authors>Craxy</Authors>
    <RepositoryUrl>https://github.com/Craxy/Parkitect-Currencies</RepositoryUrl>

    <!-- dll name -->
    <AssemblyName>$(Identifier)</AssemblyName>
    <!-- Output folder name in $(ModDir) -->
    <FolderName>$(AssemblyName)</FolderName>

    <!-- If true: execute Parkitect.exe after build. For single build: dotnet build /p:StartParkitect=true -->
    <StartParkitect>false</StartParkitect>
    <!-- Starts Parkitect via steam. $(SteamExe) must be specified! -->
    <!-- Another advantage of starting via steam: otherwise msbuild waits for Parkitect to close -->
    <UseSteam>false</UseSteam>
    
    <SteamWorkshopId>1576312321</SteamWorkshopId>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Different on each system -->
    <ParkitectPath>E:\Downloads\games\Humble Bundle\games\Parkitect\Parkitect_1.0_64bit</ParkitectPath>
    <ParkitectUserPath>E:\Documents\Parkitect</ParkitectUserPath>
    <SteamExe>D:\Games\Steam\Steam.exe</SteamExe>
  </PropertyGroup>

  <PropertyGroup>
    <ParkitectSteamId>453090</ParkitectSteamId>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\Fonts\Roboto\Roboto-Regular SDF.json" />
    <EmbeddedResource Include="Assets\Fonts\Roboto\Roboto-Regular SDF.png" />
    <EmbeddedResource Include="Assets\Fonts\Roboto\Roboto-Regular SDF.txt" />
    <Compile Remove="Editor\*.cs" />
    <None Include="Editor\*.cs" />
  </ItemGroup>

